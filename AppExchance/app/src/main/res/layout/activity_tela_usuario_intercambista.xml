<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".TelaUsuarioIntercambista">

    <ImageView
        android:id="@+id/img_perfil_inter"
        android:layout_width="79dp"
        android:layout_height="67dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_usua_inter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

<!--    <ImageView-->
<!--        android:layout_width="40dp"-->
<!--        android:layout_height="37dp"-->
<!--        android:src="@drawable/verificado_azul"-->
<!--        tools:ignore="MissingConstraints"-->
<!--        tools:layout_editor_absoluteX="83dp"-->
<!--        tools:layout_editor_absoluteY="26dp" />-->

    <TextView
        android:id="@+id/nome_usuario_host"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="22dp"
        android:layout_marginLeft="26dp"
        android:text="@string/usuario_inter"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_perfil_inter"/>

    <View
        android:id="@+id/conteiner_menu"
        android:layout_width="410dp"
        android:layout_height="700dp"
        android:layout_margin="30dp"
        android:background="@drawable/view_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_usuario_host"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/icon_meu_perfil"
        android:layout_width="64dp"
        android:layout_height="47dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="144dp"
        android:src="@drawable/perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/opcao_perfil"
        style="@style/Opcoes_Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="@string/meu_perfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_meu_perfil" />

    <ImageView
        android:id="@+id/icon_editar"
        android:layout_width="64dp"
        android:layout_height="45dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="52dp"
        android:src="@drawable/editar_imagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/opcao_editar"
        style="@style/Opcoes_Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editar"
        android:layout_marginTop="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_meu_perfil"/>

    <ImageView
        android:id="@+id/icon_favoritos"
        android:layout_width="62dp"
        android:layout_height="41dp"
        android:src="@drawable/favorito"
        android:layout_marginTop="250dp"
        android:layout_marginStart="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/opcao_favorito"
        style="@style/Opcoes_Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favoritos"
        android:layout_marginTop="260dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_favoritos"/>

    <ImageView
        android:id="@+id/icon_config"
        android:layout_width="64dp"
        android:layout_height="47dp"
        android:src="@drawable/engrenagem_config"
        android:layout_marginTop="300dp"
        android:layout_marginStart="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/opcao_config"
        style="@style/Opcoes_Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confg"
        android:layout_marginTop="310dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_config"/>

</androidx.constraintlayout.widget.ConstraintLayout>