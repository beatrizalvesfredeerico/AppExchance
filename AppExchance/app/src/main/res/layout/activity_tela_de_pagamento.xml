<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaDePagamento">

    <TextView
        style="@style/TitleText"
        android:id="@+id/confirme_dados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/back"
        android:text="@string/confirme_dados"
        android:layout_margin="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        style="@style/Edit_Text"
        android:id="@+id/campo_email"
        android:layout_width="261dp"
        android:layout_height="64dp"
        android:layout_marginTop="44dp"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirme_dados" />

    <EditText
        style="@style/Edit_Text"
        android:id="@+id/campo_nome"
        android:layout_width="261dp"
        android:layout_height="64dp"
        android:layout_marginTop="44dp"
        android:hint="Nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_email"/>

    <EditText
        style="@style/Edit_Text"
        android:id="@+id/campo_nascionalidade"
        android:layout_width="261dp"
        android:layout_height="64dp"
        android:layout_marginTop="44dp"
        android:hint="Nascionalidade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_nome"/>

    <TextView
        style="@style/TitleText"
        android:id="@+id/forma_pagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forma_pagamento"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_nascionalidade"/>

    <Button
        style="@style/Edit_Text"
        android:id="@+id/pagamento_boleto"
        android:layout_width="278dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:text="Emitir Boleto"
        android:textColor="@color/cinza_escuro"
        android:backgroundTint="@color/cinza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forma_pagamento"/>

    <Button
        style="@style/Button_Login"
        android:layout_width="272dp"
        android:layout_height="69dp"
        android:text="Finalizar Reserva"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pagamento_boleto"/>

</androidx.constraintlayout.widget.ConstraintLayout>